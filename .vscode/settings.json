{
    "terminal.integrated.profiles.windows": {
        "MSYS2 MinGW 64-bit": {
            "path": "C:/msys64/usr/bin/bash.exe",
            "args": ["--login", "-i"],
            "icon": "terminal-bash",
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1",
                "PATH": "/c/msys64/mingw64/bin:/c/msys64/usr/bin:${env:PATH}"
            }
        }
    },
    "terminal.integrated.defaultProfile.windows": "MSYS2 MinGW 64-bit",
    // CMake Tools settings
    "cmake.configureOnOpen": true,
    "cmake.useCMakePresets": "auto",
    "cmake.sourceDirectory": "${workspaceFolder}",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    
    // Default preset for Windows
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
    },
    
    // Generator - use MinGW on Windows
    "cmake.generator": "MinGW Makefiles",
    
    // Build environment - add MinGW to PATH
    "cmake.environment": {
        "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
    },
    
    // Configure environment
    "cmake.configureEnvironment": {
        "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
    },
    
    // Build environment
    "cmake.buildEnvironment": {
        "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
    },
    
    // Parallel jobs
    "cmake.parallelJobs": 0,
    
    // Copy compile_commands.json to root for clangd/intellisense
    "cmake.copyCompileCommands": "${workspaceFolder}/compile_commands.json",
    
    // C/C++ extension settings
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.compileCommands": "${workspaceFolder}/compile_commands.json",
    
    // Files to exclude from explorer
    "files.exclude": {
        "**/build": false,
        "**/build-web": false,
        "**/.git": true,
        "**/deps": true,
        "**/libs": true
    },
    
    // File associations
    "files.associations": {
        "*.hpp": "cpp",
        "*.h": "c",
        "*.rb": "ruby"
    }
}