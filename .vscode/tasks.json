{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "-j"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": []
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug",
                "-j"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["CMake: Configure Debug"]
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Release",
                "-j"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["CMake: Configure Release"]
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "clean"
            ],
            "options": {
                "env": {
                    "PATH": "C:/msys64/mingw64/bin;${env:PATH}"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run GMR",
            "type": "shell",
            "command": "${workspaceFolder}/gmr.exe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "problemMatcher": [],
            "dependsOn": ["CMake: Build"]
        },
        {
            "label": "Build Web",
            "type": "shell",
            "command": "${workspaceFolder}/build.sh",
            "args": ["web"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:/msys64/usr/bin/bash.exe",
                    "args": ["-l", "-c"]
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}