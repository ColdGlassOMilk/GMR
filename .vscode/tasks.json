{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_C_COMPILER=C:/msys64/mingw64/bin/gcc.exe",
                "-DCMAKE_CXX_COMPILER=C:/msys64/mingw64/bin/g++.exe"
            ],
            "problemMatcher": [],
            "detail": "Configure CMake for Debug build"
        },
        {
            "label": "CMake Configure (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-G", "MinGW Makefiles",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_C_COMPILER=C:/msys64/mingw64/bin/gcc.exe",
                "-DCMAKE_CXX_COMPILER=C:/msys64/mingw64/bin/g++.exe"
            ],
            "problemMatcher": [],
            "detail": "Configure CMake for Release build"
        },
        {
            "label": "Build GMR (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "CMake Configure (Debug)",
            "detail": "Build GMR with debug symbols"
        },
        {
            "label": "Build GMR (Release)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--config", "Release"],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": "CMake Configure (Release)",
            "detail": "Build GMR optimized release"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build", "--target", "clean"],
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "Clean All",
            "type": "shell",
            "command": "rmdir",
            "args": ["/S", "/Q", "build"],
            "problemMatcher": [],
            "detail": "Remove entire build directory"
        },
        {
            "label": "Run GMR",
            "type": "shell",
            "command": "${workspaceFolder}/gmr.exe",
            "problemMatcher": [],
            "detail": "Run GMR"
        },
        {
            "label": "Build and Run",
            "dependsOn": ["Build GMR (Debug)", "Run GMR"],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "detail": "Build then run"
        }
    ]
}
